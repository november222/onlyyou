{
  "expo": {
    "name": "onlyyou",
    "slug": "onlyyou",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "onlyyou",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "developer": {
      "tool": "expo-cli"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.onlyyou.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for video calls.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice and video calls.",
        "NSFaceIDUsageDescription": "OnlyYou uses Face ID to unlock your private content."
      },
      "associatedDomains": [
        "applinks:onlyyou.app"
      ]
    },
    "android": {
      "softwareKeyboardLayoutMode": "resize",
      "permissions": [
        "INTERNET",
        "CAMERA",
        "RECORD_AUDIO",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "MODIFY_AUDIO_SETTINGS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "onlyyou.app",
              "pathPrefix": "/connect"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-localization",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your partner."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
